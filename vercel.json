{
    "functions": {
      "api/*.js": {
        "runtime": "nodejs18.x"
      }
    },
    "builds": [
      { "src": "api/*.js", "use": "@vercel/node" },
      { "src": "src/index.html", "use": "@vercel/static" }
    ],
    "routes": [
      { "src": "/api/(.*)", "dest": "/api/$1.js" },
      { "src": "/(.*)", "dest": "/src/index.html" }
    ]
  }
  